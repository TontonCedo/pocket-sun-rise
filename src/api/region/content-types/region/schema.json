{
  "kind": "collectionType",
  "collectionName": "regions",
  "info": {
    "singularName": "region",
    "pluralName": "regions",
    "displayName": "Region"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "RegionID": {
      "type": "uid",
      "targetField": "RegionName",
      "required": true
    },
    "RegionName": {
      "type": "string",
      "maxLength": 20,
      "required": true,
      "unique": true
    },
    "RegionSubName": {
      "type": "string"
    },
    "RegionDescription": {
      "type": "text"
    },
    "RegionImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "RegionArea": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Hokkaido",
        "Tohoku",
        "Kanto",
        "Chubu",
        "Kansai",
        "Chugoku",
        "Shikoku",
        "Kyushu",
        "Okinawa"
      ]
    }
  }
}
