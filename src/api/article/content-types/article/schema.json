{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ArticleName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "ArticleID": {
      "type": "uid",
      "targetField": "ArticleName",
      "required": true
    },
    "ArticleText": {
      "type": "text",
      "required": true
    },
    "ArticleMedia": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "Visible": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "sub_region": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::sub-region.sub-region"
    }
  }
}
